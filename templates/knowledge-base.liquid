<!-- AirControl-13-Admin-Theme/pages/support/knowledge-dashboard-alternative.html -->
{%  assign channels  = site.pages['/kb'].children_in_nav_menu %}

<div class="max-w-screen-xl px-6 py-8 mx-auto space-y-6 xl:px-12">
  <div class="max-w-screen-md mx-auto">
    <h2 class="text-2xl font-semibold text-center text-gray-800 lg:text-4xl">{{ page.link_text }}</h2>
    <p class="mt-2 text-sm text-center text-gray-700">
      {{ page.settings.description }}</p>
    <form action="" class="relative flex-1">
      <div class="flex justify-center pt-6 pb-3 mt-5 space-x-3 lg:py-3">
      <div class="relative flex items-center justify-between space-x-4">
        <input type="text" placeholder="Search term..." class="block w-full py-3 pl-12 placeholder-gray-400 transition-colors duration-300 border peer focus:border-transparent ring-transparent focus:ring-transparent focus:ring-opacity-80  text-sm">
          <div class="absolute left-0 flex items-center justify-center w-8 h-8 p-1 text-gray-600 transition-all duration-300 bg-transparent rounded-full top-2 hover:bg-gray-100 peer-focus:text-blue-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </div>
        <button class="flex items-center px-4 py-3 space-x-2 text-sm font-semibold leading-4 transition-colors duration-300 bg-blue-600 rounded-md hover:bg-blue-700 text-blue-50">
          <span>
            Search
          </span>
        </button>
      </div>
    </form>
    <div class="flex flex-wrap items-center justify-center mt-4 space-x-3 space-y-2">
      <span class="w-full text-sm font-semibold text-center text-gray-700 md:text-left md:w-auto">
        Popular:
      </span>
      {% for tag in page.settings.tags %}
        <a href="{{ page.path |  append: '?tag=' |  append: tag.name }}" class="px-3 py-1 text-xs font-semibold text-blue-600 bg-blue-100 rounded-lg">
          {{ tag.name }}
        </a>
      {% endfor %}

    </div>
  </div>
  <div class="grid flex-1 gap-6 pt-8 mt-6 grid-cols-1 sm:grid-cols-2 xl:grid-cols-4">
    {% for item in channels %}
      <a href="{{ item.path }}" class="flex flex-col items-start justify-between px-4 pt-6 pb-3 space-y-6 transition-all duration-300 bg-white rounded-md shadow-sm shadow-gray-200 hover:-translate-y-1 hover:shadow-md ">
        <div class="flex items-center justify-center w-12 h-12 text-blue-600 bg-blue-100 rounded-md md:w-16 md:h-16">
          {% if item.settings.icon %}
            <img src="{{ item.settings.icon }}" class="w-8 h-8"/>
          {% else %}
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
            </svg>
          {% endif %}
        </div>
        <div class="flex-1">
          <span class="text-base font-semibold text-gray-800">{{ item.link_text }}</span>
          <span class="block mt-1 mb-2 text-sm text-gray-700">{{ item.pages | size }} Articles</span>
          <span class="block mb-3 text-sm">最后更新：{{ page.published_at | date: "%Y-%m-%d" }}</span>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
      "name": "Knowledge Base",
      "description": "知识库文档中心",
      "thumb_url": "images/theme/knowledge-base.png",
      "sub_page_templates": ["knowledge-base-post"],
      "settings": [
        {
            "id": "icon",
            "type": "image_picker",
            "ratio": "1:1",
            "width": 100,
            "label": "图标"
        },
        {
            "id": "tags",
            "type": "tag_picker",
            "multiple": true,
            "label": "标签"
        },
        {
            "id": "description",
            "type": "textarea",
            "label": "描述"
        }
      ]
  }
{% endschema %}

  {
    "name": "t:settings_schema.generic.name",
    "settings": [
      {
        "id": "is_allow_published",
        "type": "checkbox",
        "label": "是否开启先发后审",
        "info": "先发后审：前台提交即发布；先审后发：前台提交，后台审核后发布。",
        "default": false
      },
      {
        "id": "logo_url",
        "type": "image_picker",
        "ratio": "3:1",
        "width": 150,
        "label": "站点 LOGO"
      },
      {
        "id": "default_avatar",
        "type": "image_picker",
        "ratio": "4:4",
        "width": 100,
        "label": "默认头像",
        "info": "新注册用户未设置头像之前，显示该默认头像"
      },
      {
        "id": "hot_tags",
        "type": "text",
        "label": "热门标签",
        "info": "用英文逗号隔开，且保证在【标签管理】中已添加了该标签。"
      },
      {
        "id": "is_allow_author",
        "type": "checkbox",
        "label": "文章是否显示作者信息",
        "default": true
      },
      {
        "id": "is_allow_feedback",
        "type": "checkbox",
        "label": "文章是否显示反馈表情",
        "default": true
      },
      {
        "id": "feedback_useful_type",
        "type": "text",
        "label": "首选反馈表情",
        "placeholder": "在'应用设置'->'反馈设置'中复制过来",
        "default": "😊"
      },
      {
        "id": "slogan",
        "type": "text",
        "label": "站点口号",
        "default": "Create community sites, code-free"
      },
      {
        "id": "description",
        "type": "textarea",
        "label": "站点描述",
        "default": "Browse beautifully designed templates, effortlessly customize it to meet your specific requirements."
      },
      {
        "id": "copyright_info",
        "type": "text",
        "label": "版权信息",
        "placeholder": "Tanmer Inc. All Rights Served."
      }
    ]
  },

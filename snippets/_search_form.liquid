<section id="search_form" class="mx-auto max-w-screen-lg px-3 py-6">
  <div class="flex flex-col items-center justify-between gap-6 sm:flex-row">
    <div class="sm:w-7/12">
      <div class="text-3xl font-bold">
        {{ site.settings.search_title }}
      </div>
      <p class="mt-3 ">{{ site.settings.search_info }}</p>
    </div>
    <div class="w-full sm:w-5/12">
      {% form_tag 'search' %}
        <label for="default-search" class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white">Search</label>
        <div class="relative">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                </svg>
            </div>
            <input type="search" name="{{form.keywords_field_name}}" value="{{ search.keywords | escape_once }}" id="default-search" class="block w-full text-sm p-5 ps-10  text-gray-900 border border-gray-300 rounded-full bg-gray-50 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary dark:focus:border-primary" placeholder="全站搜索..." required />
            <button type="submit" class="text-white absolute end-2.5 bottom-2.5 px-5 py-2 bg-primary hover:bg-secondary focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-full dark:bg-primary dark:hover:bg-primary dark:focus:ring-teal-800">搜索</button>
        </div>
      {% endform_tag %}
    </div>
  </div>
</section>

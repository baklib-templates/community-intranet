{% comment %}
  @params breadcrumb
    array of objects with keys:
      link_text: string
      path: string
{% endcomment %}
<nav class="flex items-center justify-between">
  <div class="flex items-center space-x-4 divide-x-2 divide-gray-200">
    <span class="text-lg font-semibold text-gray-800">
      {{ page.link_text }}
    </span>
    <div class="items-center hidden pl-4 space-x-2 text-sm md:flex">
      {% for crumb in breadcrumb %}
        <a href="{{ crumb.path }}" class="flex space-x-2 text-gray-500 transition-all duration-300 hover:underline hover:text-blue-600">
          <span>{{ crumb.link_text }}</span>
        </a>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      {% endfor %}
      <span class="flex space-x-2 text-gray-700">
        <span>Current</span>
      </span>
    </div>
  </div>
  <div class="flex space-x-2 md:space-x-3">
    <button class="flex items-center px-4 py-3 space-x-1 text-sm font-semibold leading-4 transition-colors duration-300 bg-blue-600 rounded-md hover:bg-blue-700 text-blue-50">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 " fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
      <span>
        New Project
      </span>
    </button>
  </div>
</nav>

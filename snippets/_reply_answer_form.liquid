<div
  x-show="open"
  x-cloak
  class="w-full pl-2 pr-2 mt-2 md:pl-4 md:pr-4 md:mt-3"
  id="create_reply_{{ parent.id }}_id">
  <div class="flex space-x-3">
    <div class="w-full">
      {% form_tag 'reply' %}
        <input value="{{ root.target.full_slug }}" autocomplete="off" type="hidden" name="target_full_path">
        <input value="create_answer_reply_success" autocomplete="off" type="hidden" name="return_template_name">
        <input value="true" autocomplete="off" type="hidden" name="reply[published]">
        <input value="{{ root.id }}" autocomplete="off" type="hidden" name="reply[root_id]">
        <input value="{{ parent.id }}" autocomplete="off" type="hidden" name="reply[parent_id]">
        <textarea name="reply[body]" rows="4" class="w-full form-textarea placeholder:italic"
        placeholder="{{ 'generic.reply' | t }} {{ parent.author.name }}..." required></textarea>

        <div id="reply_{{ reply.id }}_error" class="text-xs text-red-500"></div>
        <div class="flex items-center space-x-3">
          <input
            type="submit"
            value="{{ 'buttons.submit' | t }}"
            @click="if($el.form.checkValidity()) {open = false}"
            class="btn btn-sm" />
          <div class="btn btn-sm btn-ghost" x-on:click="open = false; content=''">
            {{ 'buttons.cancel' | t }}
          </div>
        </div>
      {% endform_tag %}
    </div>
  </div>
</div>
